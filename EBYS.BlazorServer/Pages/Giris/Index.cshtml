@page "/giris"
@model EBYS.BlazorServer.Pages.Giris.IndexModel
@{
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>Giriş Sayfası</title>
	<!-- Bootstrap CSS -->
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">

	<style>
		body {
			background: linear-gradient(to right, #6a11cb, #2575fc);
			background-size: cover;
			background-repeat: no-repeat;
			min-height: 100vh;
			display: flex;
			justify-content: center;
			align-items: center;
		}

		.container {
			max-width: 400px;
			margin: 0 auto;
			padding: 40px;
			border-radius: 5px;
			background-color: #ffffff;
			box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.1);
		}

		.form-group label {
			font-weight: bold;
			color: #333333;
		}

		.btn-primary {
			background-color: #007bff;
			border-color: #007bff;
			transition: background-color 0.3s ease;
		}

			.btn-primary:hover {
				background-color: #0056b3;
				border-color: #0056b3;
			}
	</style>
</head>
<body>
	<div class="container">
		<h2 class="mb-4 text-center">Giriş Yap</h2>
		<form method="post" asp-page="giris">
			<span class="text-danger">
				@ModelState["notfound"]?.Errors.FirstOrDefault()?.ErrorMessage
			</span>
			<div class="form-group">
				<label asp-for="KullaniciAdi">Kullanıcı Adı:</label>
				<input type="text" asp-for="KullaniciAdi" class="form-control" id="username" placeholder="Kullanıcı adınızı girin">
				<span asp-validation-for="KullaniciAdi" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="Sifre">Şifre:</label>
				<input type="password" asp-for="Sifre" class="form-control" id="password" placeholder="Şifrenizi girin">
				<span asp-validation-for="Sifre" class="text-danger"></span>

			</div>
			<button  type="submit" class="btn btn-primary btn-block">Giriş Yap</button>
		</form>
	</div>

	<!-- Bootstrap JS -->
	<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
	<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
</body>
</html>
